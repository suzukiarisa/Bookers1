<h1>Editing Book</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count, "error ") %>prohibited this book from being saved:</h3>
  <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for(@book) do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>

    <div><%= f.submit 'Update Book' %></div>

 <%= link_to "Show", book_path(@book) %>
<%= link_to "Back", book_path %>
<% end %>
